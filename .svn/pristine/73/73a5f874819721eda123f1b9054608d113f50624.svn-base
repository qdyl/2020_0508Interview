/* 公共样式 */
body {
  max-width: 768px;
  margin: 0 auto;
  background-color: #f8f8f8;
}
/*  重置样式 */
ul,
ol,
li {
  padding: 0;
  margin: 0;
  list-style-type: none;
}
a {
  text-decoration: none;
}
.index_header {
  height: 160px;
  overflow: hidden;
}
.index_header .header-slick {
  margin-bottom: 0;
}
.index_header .slick-link {
  display: block;
}
.index_header .slick-link img {
  width: 100%;
  height: 160px;
}
.index_header .slick-dots {
  bottom: 0;
}
.index_header .slick-dots li {
  margin: 0 0;
}
.index_header .slick-dots li button:before {
  color: #fff;
  font-size: 24px;
}
.index_main {
  margin-top: 5px;
  font-size: 13px;
  padding: 0 5px;
}
.index_main .main-list {
  display: flex;
  flex-wrap: wrap;
}
.index_main .list-item {
  position: relative;
  margin-top: 2px;
  padding: 0;
  text-align: center;
  overflow: hidden;
  justify-content: center;
  align-items: center;
}
.index_main .list-item .main-item-link {
  display: block;
  height: 110px;
  margin-right: 2px;
  background-color: #409eff;
  color: #fff;
  overflow: hidden;
}
.index_main .list-item .main-item-link p {
  margin-top: 60px;
}
.index_main .list-item img {
  width: 100%;
  height: 100%;
}
.index_main .list-item i {
  position: absolute;
  left: 50%;
  top: 30px;
  transform: translateX(-50%);
  display: inline-block;
  font-style: normal;
  width: 25px;
  height: 25px;
}
.index_main .list-item:nth-child(3) .main-item-link {
  margin-right: 0;
}
.index_main .list-item:nth-child(5) .main-item-link {
  margin-right: 0;
}
.index_main .list-item:nth-child(8) .main-item-link {
  margin-right: 0;
  height: 110px;
}
.index_main .list-item-4 {
  flex-basis: 33.33%;
}
.index_main .list-item-8 {
  flex-basis: 66.66%;
}
.index_main .list-item:nth-child(1) .icon {
  background: url(../images/icon1.png) no-repeat center center / 25px 25px;
}
.index_main .list-item:nth-child(2) .icon {
  background: url(../images/icon2.png) no-repeat center center / 25px 25px;
}
.index_main .list-item:nth-child(3) .icon {
  background: url(../images/icon333.png) no-repeat center center / 25px 25px;
}
.index_main .list-item:nth-child(5) .icon {
  background: url(../images/icon55.png) no-repeat center center / 25px 25px;
}
.index_main .list-item:nth-child(6) .icon {
  background: url(../images/icon6.png) no-repeat center center / 25px 25px;
}
.index_main .list-item:nth-child(7) .icon {
  background: url(../images/icon7777.png) no-repeat center center / 25px 25px;
}
