 /* 公共样式 */
 *{
    padding: 0;
    margin: 0;
}
html{
    background-color: #fff;
}
body {
   max-width: 768px;
   margin: 0 auto;
//    height: 100vh;
   background-color: #F2F2F2;
}

/*  重置样式 */
ul,
ol,
li {
   padding: 0;
   margin: 0;
   list-style-type: none;
}

a {
   text-decoration: none;
}
/*  功能类名 */
.noPadding {
    padding: 0;
}

.noLeftPadding {
    padding-left: 0;
}
.float-left{
    float: left;
}
.float-right{
    float: right;
}
.clearfix::after {
    display: block;
    clear: both;
    content: "";
}

// 一、主体
.recommendPerson-main{
    padding: 0px 10px 0;
    background-color: #F2F2F2;
    position: relative;
    z-index: 5;
    min-height: 50vh;
    overflow: auto;
    .recommendPerson-main-box{
        padding: 10px;
        background: #fff;
    }
    // 部分1、按钮(切换)
    .header-tit{
        margin-top: 15px;
        margin-bottom: 15px;
        padding-bottom: 5px;
        color: #444;
        letter-spacing: 1px;
        font-size: 18px;
        border-bottom: 1px solid #f7f7f7;
        .tit-span{
            position: relative;
            &::after{
                position: absolute;
                left: 0;
                bottom: -6px;
                content: '';
                display: inline-block;
                width: 100%;
                height: 2px;
                // background-color: #31C2BF;
                background-color: #bae7e7;
                border-radius: 4px;
            }
        }
    }
    .checkHeader-item{
        // padding-top: 15px;
        font-size: 13px;
        .header-item{
            margin-right: 15px;
            padding: 4px 8px;
            color: #2E2E2E;
            border: 1px solid #E4E4E4;
            border-radius: 4px;
            display: inline-block;
            width: 100px;
            line-height: 30px;
            text-align: center;
            letter-spacing: 1px;
        }
        .header-itemOn{
            // color: #409eff;
            color: #64BBB2;
            border: 1px solid #64BBB2;
        }
    }
    // 部分2、表单信息填写(切换)
    .switching_form_box{
        .commonForm{
            .commonName-tit{
                margin-top: 25px;
                margin-bottom: 15px;
                padding-bottom: 5px;
                color: #444;
                letter-spacing: 1px;
                font-size: 18px;
                border-bottom: 1px solid #f7f7f7;
            }
            .tit-span{
                position: relative;
                &::after{
                    position: absolute;
                    left: 0;
                    bottom: -6px;
                    content: '';
                    display: inline-block;
                    width: 100%;
                    height: 2px;
                    // background-color: #31C2BF;
                    background-color: #bae7e7;
                    border-radius: 4px;
                }
            }
        }
        .commonInput-content{
            position: relative;
            // margin-top: 10px;
            background-color: #fff;
            font-size: 13px;
            &::before{
                position: absolute;
                left: 3px;
                top: 4px;
                content: '';
                display: inline-block;
                width: 25px;
                height: 25px;
            }
            &.nameInput-content{
                &::before{
                    background: url(../images/iconName111.png) no-repeat left center/20px 20px;
                }
            }
            &.telInput-content{
                &::before{
                    background: url(../images/iconTel111.png) no-repeat left center/20px 20px;
                }
            }
            &.jobNumInput-content{
                &::before{
                    background: url(../images/iconJobNum111.png) no-repeat left center/20px 20px;
                }
            }
            &.departInput-content{
                &::before{
                    background: url(../images/iconDepart111.png) no-repeat left center/20px 20px;
                }
            }
            &.jobTypeInput-content{
                &::before{
                    background: url(../images/iconJobType111.png) no-repeat left center/20px 20px;
                }
            }
            // 校验的样式
            .error{
                padding-left: 10px;
                font-size: 12px;
                color: #fff;
            }
        }
        .leftLabelTit{
            float: left;
            line-height: 36px;
            padding-left: 30px;
            width: 70px;
        }
        .commonInput{
            float: right;
            // padding-left: 30px;
            width: calc(100% - 110px);
            height: 36px;
            line-height: 35px;
            outline: none;
            border: none;
        }
        .flieInput-content{
            position: relative;
            margin-top: 10px;
            width: 200px;
            height: 130px;
            border: 1px solid #bfbfbf;
            // background-color: #eee;
            background-color: #fff;
            border-radius: 6px;
            &::after{
                position: absolute;
                z-index: 0;
                left: 50%;
                top: 50%;
                transform: translate(-50%,-50%);
                width: 35px;
                height: 35px;
                content: '';
                display: inline-block;
                background: url('../images/iconAddFile1.png') no-repeat center center/35px 35px;
            }
            .fileInput{
                position: relative;
                z-index: 1;
                width: 100%;
                height: 100%;
                opacity: 0;
            }

        }
        .fileInput-info{
            font-size: 12px;
            color: #64BBB2;
            line-height: 30px;
        }
        .footer-submit-btn{
            margin-top: 30px;
            padding-bottom: 20px;
            text-align: center;
            .submitBtn{
                display: inline-block;
                width: 150px;
                height: 40px;
                line-height: 40px;
                color: #fff;
                font-size: 16px;
                border-radius: 30px;
                outline: none;
                // background-color: #67c23a;
                background-color: #31C2BF;
                font-size: 16px;
                // font-weight: 600;
                letter-spacing: 10px;

            }
        }
        
    }
   
}
// 二、提交按钮
.footer-submit-btn{
    margin-top: 30px;
    padding-bottom: 30px;
    text-align: center;
    .submitBtn{
        display: inline-block;
        width: 200px;
        height: 40px;
        line-height: 40px;
        color: #fff;
        font-size: 16px;
        border-radius: 30px;
        outline: none;
        // background-color: #67c23a;
        background-color: #31C2BF;
        font-size: 16px;
        // font-weight: 600;
        letter-spacing: 10px;

    }
}


// 媒体查询
@media (min-width:769px) {
    // 头部
    .header-recommendPerson{
        box-sizing: border-box;
    }
}