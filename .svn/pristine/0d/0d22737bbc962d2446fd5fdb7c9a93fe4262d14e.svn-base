
// 1、首页
.index_header {
    .header-slick {
        margin-bottom: 0;

    }

    .slick-item {}

    .slick-link {
        display: block;

        img {
            width: 100%;
            height: 160px;
        }
    }

    // 轮播样式修改
    .slick-dots {
        bottom: 0;

        li {
            margin: 0 0;

            button:before {
                color: #fff;
                font-size: 24px;
            }
        }
    }
}

.index_main {
    margin-top: 5px;
    font-size: 13px;

    // padding: 0 10px;
    .main-list {
        // display: flex;
        // flex-wrap: wrap;
        // align-items: center;
        // justify-content: center;
    }

    .list-item {
        position: relative;
        margin-top: 2px;
        padding: 0;

        text-align: center;

        overflow: hidden;
        justify-content: center;
        align-items: center;

        .main-item-link {
            display: block;
            height: 110px;
            // line-height: 80px;
            margin-right: 2px;
            // background-color: #6789ec;
            background-color: #409eff;
            color: #fff;
            overflow: hidden;

            // display: flex;
            // justify-content:center;
            // align-items:center;
            p {
                margin-top: 60px;
            }
        }

        img {
            width: 100%;
            height: 100%;
        }

        i {
            position: absolute;
            left: 50%;
            top: 30px;
            transform: translateX(-50%);
            display: inline-block;
            font-style: normal;
            width: 25px;
            height: 25px;
        }

        // &::after{
        //     position: absolute;
        //     right: 0;
        //     content: '';
        //     display: inline-block;
        //     width: 5px;
        //     height: 100%;
        //     background-color: #fff;
        // }

        &:nth-child(3) .main-item-link {
            margin-right: 0;
        }

        &:nth-child(5) .main-item-link {
            margin-right: 0;
        }

        &:nth-child(8) {
            .main-item-link {
                margin-right: 0;
                // background-color: transparent;
                height: 110px;
            }
        }
    }

    // 图标控制
    .list-item:nth-child(1) .icon {
        background: url(../images/icon1.png) no-repeat center center/25px 25px;
    }

    .list-item:nth-child(2) .icon {
        background: url(../images/icon2.png) no-repeat center center/25px 25px;
    }

    .list-item:nth-child(3) .icon {
        background: url(../images/icon333.png) no-repeat center center/25px 25px;
    }

    .list-item:nth-child(5) .icon {
        background: url(../images/icon55.png) no-repeat center center/25px 25px;
    }

    .list-item:nth-child(6) .icon {
        background: url(../images/icon6.png) no-repeat center center/25px 25px;
    }

    .list-item:nth-child(7) .icon {
        background: url(../images/icon7777.png) no-repeat center center/25px 25px;
    }
}